{
  "name": "ui-particle-v1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cli:b": "turbo run build --filter=ui-particle",
    "cli:d": "turbo run dev --filter=ui-particle"
  },
  "devDependencies": {
    "lerna": "^8.1.8",
    "prettier": "^3.2.5",
    "turbo": "^2.1.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.5",
  "workspaces": [
    "apps/*",
    "packages/*",
    "configs/*",
    "contribution/*"
  ]
}
